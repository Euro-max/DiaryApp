@model DiaryItems
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card-header bg-primary text-white">
                <h2>DiaryForm</h2>
                </div>
                 <div class="card-body">
                     <form asp-action="Create" method="post">
                         <div asp-validation-summary="All"class="text-danger"></div>
                         <div class="form-group mb-3">
                             <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" placeholder="Enter a Title" />
                         </div>

                    <div class="form-group mb-3">
                        <label asp-for="Content" class="form-label"></label>
                        <input asp-for="Content" class="form-control" placeholder="Enter your Content" />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Created" class="form-label"></label>
                        <input asp-for="Created" class="form-control" placeholder="Enter Date" type="date"/>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button class="btn btn-success" asp-action="Create">Submit</button>
                        <button class="btn btn-primary" asp-action="Index">Cancel</button>
                    </div>
                

                     </form>
                 </div>       
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}